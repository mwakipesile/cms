<ul id="files">
  <% @revisions.each do |rev_num| %>
    <li>
      <a class="revisions" href='/<%= @filename %>/revisions/<%= rev_num %>'>Revision <%= rev_num %></a>     
    </li>
  <% end %>
</ul>

<% content_for :header_link do %>
  <a class='add' href='/new'>New Document</a>
  <% if session[:username] %>
    <span>Signed in as <%= session[:username] %></span>
    <form action='/users/signout' method='post' class='signout'>
      <button type='submit'>Sign Out</button>
    </form> 
  <% else %>
    <a class='signin' href='/users/signin'>Sign In</a>
    <a class='signup' href='/users/signup'>Sign Up</a>
  <% end %>
<% end %>
